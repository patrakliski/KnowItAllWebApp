@model OfferMaterialsViewModel

<h4>Add Material to Offer:</h4>
<hr />
<div class="row">
    <form asp-action="AddOfferMaterial">
        <input id="offerMaterialOfferId" type="hidden" asp-for="@Model.OfferMaterial.OfferId" class="form-control" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group pt-2">
            <label class="control-label pb-2">Material</label>
            <select asp-for="@Model.OfferMaterial.MaterialId" class="form-control" asp-items="@Model.MaterialsSelectList">
                <option value="">---Select---</option>
            </select>
        </div>
        <div class="form-group pt-2">
            <label asp-for="@Model.OfferMaterial.Quantity" class="control-label pb-2"></label>
            <input id="Quantity" type="number" step="1" min="0" asp-for="@Model.OfferMaterial.Quantity" class="form-control" />
            <span asp-validation-for="@Model.OfferMaterial.Quantity" class="text-danger"></span>
        </div>
        <div class="form-group pt-2 pb-2" style="text-align:right">
            <input type="submit" name="command" value="Add" class="btn btn-primary" />
        </div>
    </form>
</div>

